<!DOCTYPE html>
<html>
<head>
  <title>Vendors</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card:hover {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      cursor: pointer;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">All Vendors</h2>
    <div class="row">
      <% vendors.forEach(vendor => { %>
        <div class="col-md-4 mb-4">
          <div class="card" onclick="window.location.href='/vendors/<%= vendor._id %>'">
            <div class="card-body">
              <h5 class="card-title"><%= vendor.name %> (<%= vendor.vendorId %>)</h5>
              <p class="card-text">
                <strong>Area:</strong> <%= vendor.area %><br>
                <strong>Email:</strong> <%= vendor.email %><br>
                <strong>Phone:</strong> <%= vendor.phone %><br>
                <strong>Rating:</strong> <%= vendor.rating %> ‚≠ê<br>
                <strong>Joined On:</strong> <%= vendor.joinedOn.toDateString() %><br>
                <strong>Products:</strong> <%= vendor.products.join(', ') %>
              </p>
              <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); showDeleteModal('<%= vendor._id %>', '<%= vendor.email %>')">Remove Vendor</button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <form id="deleteForm" method="POST">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Removal</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="vendorIdToDelete" id="vendorIdToDelete">
            <input type="hidden" name="vendorEmail" id="vendorEmail">
            <div class="mb-3">
              <label for="reason" class="form-label">Reason for removal:</label>
              <textarea class="form-control" name="reason" id="reason" required></textarea>
            </div>
            <p class="text-muted">A confirmation and email will be sent to the vendor.</p>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger">Confirm & Remove</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Email Sent Alert -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="emailSentToast" class="toast text-bg-success" role="alert">
      <div class="toast-header">
        <strong class="me-auto">Notification</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body">
        Email sent to vendor successfully.
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showDeleteModal(vendorId, email) {
      document.getElementById("vendorIdToDelete").value = vendorId;
      document.getElementById("vendorEmail").value = email;
      const modal = new bootstrap.Modal(document.getElementById("deleteModal"));
      modal.show();
    }

    document.getElementById("deleteForm").addEventListener("submit", function (e) {
      e.preventDefault();
      
      const formData = new URLSearchParams(new FormData(this));

      fetch(`/vendors/delete`, {
        method: "POST",
        body: formData
      })
      .then(res => {
        if (res.ok) {
          const toast = new bootstrap.Toast(document.getElementById("emailSentToast"));
          toast.show();
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        }
      });
    });
  </script>
</body>
</html>

