<!DOCTYPE html>
<html>
<head>
  <title>Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card:hover {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      cursor: pointer;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">All Orders</h2>
    <div class="row">
      <% orders.forEach(order => { %>
        <div class="col-md-4 mb-4">
          <div class="card" onclick="window.location.href='/orders/<%= order._id %>'">
            <div class="card-body">
              <h5 class="card-title">Order: <%= order._id.toString().slice(-6).toUpperCase() %></h5>
              <p class="card-text">
                <strong>Buyer:</strong> <%= order.buyer %><br>
                <strong>Vendor:</strong> <%= order.vendor %><br>
                <strong>Total Items:</strong> <%= order.items.length %><br>
                <strong>Final Amount:</strong> â‚¹<%= order.finalAmount %><br>
                <strong>Status:</strong> <%= order.orderStatus %><br>
                <strong>Placed:</strong> <%= order.placedAt.toDateString() %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
