 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.name %> - Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .container {
      background: white;
      border-radius: 15px;
      max-width: 700px;
      width: 100%;
      padding: 30px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      text-align: center;
    }

    .product-image {
      width: 100%;
      max-height: 400px;
      object-fit: contain;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .product-title {
      font-size: 2em;
      margin: 10px 0;
      color: #333;
    }

    .product-brand {
      font-size: 1.1em;
      color: #777;
      margin-bottom: 10px;
    }

    .product-price {
      font-size: 1.6em;
      color: #27ae60;
      font-weight: bold;
      margin: 15px 0;
    }

    .product-description {
      font-size: 1em;
      color: #444;
      margin-bottom: 25px;
    }

    .back-button {
      display: inline-block;
      text-decoration: none;
      background: #3498db;
      color: white;
      padding: 10px 20px;
      border-radius: 25px;
      transition: background 0.3s ease;
      cursor: pointer;
    }

    .back-button:hover {
      background: #2980b9;
    }

    input[type="number"] {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      width: 100%;
      max-width: 200px;
      margin-bottom: 12px;
    }

    @media (max-width: 600px) {
      .product-title {
        font-size: 1.5em;
      }
      .product-price {
        font-size: 1.3em;
      }
    }

    .toast {
      visibility: hidden;
      min-width: 300px;
      background-color: #2ecc71;
      color: white;
      text-align: center;
      border-radius: 10px;
      padding: 20px 30px;
      position: fixed;
      z-index: 999;
      bottom: 30px;
      right: 30px;
      font-size: 1.2em;
      font-weight: bold;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
      opacity: 0;
      transition: opacity 0.5s, visibility 0.5s;
    }

    .toast.show {
      visibility: visible;
      opacity: 1;
    }
  </style>
</head>
<body>
  <div class="container">
    <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="product-image">
    <h1 class="product-title"><%= product.name %></h1>
    <p class="product-brand">by <%= product.brand %></p>
    <p class="product-price">$<%= product.price %></p>
    <p class="product-description"><%= product.description %></p>
    <p class="product-description"><strong>Stock Available:</strong> <%= product.stock %></p>

    <a href="/products?category=<%= product.category %>" class="back-button">‚Üê Back to <%= product.category %> products</a>

    <!-- Delete Product -->
    <form id="deleteForm" action="/products/<%= product._id %>?_method=DELETE" method="POST" style="margin-top: 20px;">
      <button type="submit" class="back-button" style="background: #e74c3c;">üóë Delete Product</button>
    </form>

    <!-- Update Stock -->
    <form id="editStockForm" action="/products/<%= product._id %>/stock?_method=PUT" method="POST" style="margin-top: 20px;">
      <label for="stock" style="display: block; margin-bottom: 8px; font-weight: bold;">Update Stock Quantity:</label>
      <input type="number" id="stock" name="stock" value="<%= product.stock %>" min="0" required>
      <button type="submit" class="back-button" style="background: #f39c12;">‚úèÔ∏è Update Stock</button>
    </form>
  </div>

  <div id="toast" class="toast">Product successfully deleted.</div>

  <script>
    const deleteForm = document.getElementById("deleteForm");

    deleteForm.addEventListener("submit", function(event) {
      const confirmed = confirm("Are you sure you want to delete this product?");
      if (!confirmed) {
        event.preventDefault();
      }
    });

    const urlParams = new URLSearchParams(window.location.search);
    const toast = document.getElementById("toast");

    if (urlParams.get('deleted') === 'true' || urlParams.get('updated') === 'true') {
      toast.textContent = urlParams.get('deleted') === 'true'
        ? "‚úÖ Product successfully deleted."
        : "‚úÖ Stock successfully updated!";
      toast.classList.add("show");

      setTimeout(() => {
        toast.classList.remove("show");
      }, 3000);
    }
  </script>
</body>
</html>
