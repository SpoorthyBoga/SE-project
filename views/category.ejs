<body class="bg-gray-50">
  <%- include('./partials/navbar') %>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-center mb-12">Product Categories</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <a href="/products?category=men" class="block">
        <div class="category-card bg-white rounded-lg shadow-md overflow-hidden">
          <div class="h-48 bg-gray-200 flex items-center justify-center">
            <i class="fas fa-male text-5xl text-gray-600"></i>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-center text-gray-800">Men</h2>
            <p class="mt-2 text-gray-600 text-center">Explore men's collection</p>
          </div>
        </div>
      </a>
      
      <a href="/products?category=women" class="block">
        <div class="category-card bg-white rounded-lg shadow-md overflow-hidden">
          <div class="h-48 bg-gray-200 flex items-center justify-center">
            <i class="fas fa-female text-5xl text-gray-600"></i>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-center text-gray-800">Women</h2>
            <p class="mt-2 text-gray-600 text-center">Explore women's collection</p>
          </div>
        </div>
      </a>
      
      <a href="/products?category=kids" class="block">
        <div class="category-card bg-white rounded-lg shadow-md overflow-hidden">
          <div class="h-48 bg-gray-200 flex items-center justify-center">
            <i class="fas fa-child text-5xl text-gray-600"></i>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-center text-gray-800">Kids</h2>
            <p class="mt-2 text-gray-600 text-center">Explore kids' collection</p>
          </div>
        </div>
      </a>
      
      <a href="/products?category=all" class="block">
        <div class="category-card bg-white rounded-lg shadow-md overflow-hidden">
          <div class="h-48 bg-gray-200 flex items-center justify-center">
            <i class="fas fa-th-large text-5xl text-gray-600"></i>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-center text-gray-800">All Products</h2>
            <p class="mt-2 text-gray-600 text-center">View all products</p>
          </div>
        </div>
      </a>
    </div>
    
    <div class="mt-12 text-center">
      <a href="/add-new" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
        <i class="fas fa-plus mr-2"></i> Add New Product
      </a>
    </div>
  </div>

  <%- include('./partials/footer') %>
</body>
</html>