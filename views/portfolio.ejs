<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Vendor Profile</title>
  <link rel="stylesheet" href="/styles.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="container">
    <h1>Edit Vendor Profile</h1>

    <form action="/vendors/<%= vendor._id %>/update" method="POST">
      <label>Vendor ID: <input name="vendorId" value="<%= vendor.vendorId %>" readonly></label>
      <label>Name: <input name="name" value="<%= vendor.name %>"></label>
      <label>Email: <input name="email" value="<%= vendor.email %>"></label>
      <label>Phone: <input name="phone" value="<%= vendor.phone %>"></label>
      <label>Area: <input name="area" value="<%= vendor.area %>"></label>
      <label>Rating: <input name="rating" type="number" step="0.1" value="<%= vendor.rating %>"></label>
      <label>Joined On: <input type="date" name="joinedOn" value="<%= vendor.joinedOn.toISOString().substring(0,10) %>" /></label>

      <button type="submit">Save Changes</button>
    </form>

    <button onclick="confirmDelete()">Delete Profile</button>

    <!-- Reason Modal -->
    <div id="deleteModal" class="modal">
      <div class="modal-content">
        <h2>Reason for removing this vendor:</h2>
        <textarea id="deleteReason" placeholder="Enter reason here..."></textarea>
        <button onclick="submitDelete()">Confirm Delete</button>
        <button onclick="closeModal()">Cancel</button>
      </div>
    </div>

    <hr>

    <div class="chat-section">
      <h2>Chat / Messages</h2>
      <div id="chat-box">
        <!-- Dynamically loaded messages -->
        <p>No messages yet.</p>
      </div>
      <form id="chat-form">
        <input type="text" placeholder="Type your message..." id="chat-input" />
        <button type="submit">Send</button>
      </form>
    </div>
  </div>

  <script>
    function confirmDelete() {
      document.getElementById("deleteModal").style.display = "block";
    }

    function closeModal() {
      document.getElementById("deleteModal").style.display = "none";
    }

    function submitDelete() {
      const reason = document.getElementById("deleteReason").value;
      if (!reason) return alert("Please provide a reason.");

      // For now, just show the alert and simulate email sent
      Swal.fire("Vendor deleted", "Email sent to vendor.", "success");
      document.getElementById("deleteModal").style.display = "none";

      // Real implementation: send DELETE request with reason
      // fetch(`/vendors/<%= vendor._id %>/delete`, {
      //   method: 'POST',
      //   headers: { 'Content-Type': 'application/json' },
      //   body: JSON.stringify({ reason })
      // }).then(() => {
      //   window.location.href = "/vendors";
      // });
    }

    document.getElementById("chat-form").addEventListener("submit", function (e) {
      e.preventDefault();
      const msg = document.getElementById("chat-input").value;
      if (!msg) return;
      const chatBox = document.getElementById("chat-box");
      const p = document.createElement("p");
      p.textContent = "You: " + msg;
      chatBox.appendChild(p);
      document.getElementById("chat-input").value = "";
    });
  </script>

  <style>
    .modal { display: none; position: fixed; top: 30%; left: 30%; width: 40%; background: #fff; border: 1px solid #ccc; padding: 20px; z-index: 1000; }
    .modal-content { display: flex; flex-direction: column; gap: 1rem; }
    .chat-section { margin-top: 40px; border-top: 1px solid #ddd; padding-top: 20px; }
    #chat-box { height: 150px; overflow-y: scroll; border: 1px solid #aaa; padding: 10px; }
  </style>
</body>
</html>
