<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    body {
      background-color: #f8f9fa;
    }

    .container {
      max-width: 1200px;
    }

    h2 {
      font-size: 2rem;
      font-weight: bold;
      color: #343a40;
    }

    h4 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #495057;
      margin-top: 1.5rem;
    }

    .btn-secondary {
      background-color: #6c757d;
      border-color: #6c757d;
    }

    .card {
      border-radius: 10px;
      border: none;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      background-color: #f1f3f5;
      font-weight: bold;
    }

    .list-group-item {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .list-group-item + .list-group-item {
      margin-top: 10px;
    }

    .payment-details, .shipping-details {
      background-color: #ffffff;
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .payment-details {
      margin-top: 2rem;
    }

    .tracking-details {
      background-color: #ffffff;
      padding: 1.5rem;
      margin-top: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .btn {
      font-size: 1rem;
    }

    .order-summary {
      margin-top: 2rem;
    }

    .order-summary p {
      font-size: 1rem;
      font-weight: 500;
    }

    .status {
      font-weight: bold;
      color: #28a745;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <a href="/orders" class="btn btn-secondary mb-4">← Back to Orders</a>
    <h2>Order Details: <%= order._id %></h2>
    <hr>

    <div class="shipping-details">
      <h4>Customer & Vendor</h4>
      <p><strong>Buyer ID:</strong> <%= order.buyer %><br>
      <strong>Vendor ID:</strong> <%= order.vendor %></p>

      <h4>Shipping Address</h4>
      <p><%= order.shippingAddress.street %>, <%= order.shippingAddress.city %><br>
      <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %>, <%= order.shippingAddress.country %></p>
    </div>

    <div class="card order-summary">
      <div class="card-header">Items</div>
      <div class="card-body">
        <ul class="list-group">
          <% order.items.forEach(item => { %>
            <li class="list-group-item">
              Product: <%= item.product %> | Quantity: <%= item.quantity %> | Price: ₹<%= item.price %>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="payment-details">
      <h4>Payment</h4>
      <p><strong>Method:</strong> <%= order.paymentMethod %><br>
      <strong>Status:</strong> <span class="status"><%= order.paymentStatus %></span><br>
      <strong>Coupon:</strong> <%= order.coupon.code || "N/A" %> (₹<%= order.coupon.discountAmount %>)<br>
      <strong>Total:</strong> ₹<%= order.totalAmount %><br>
      <strong>Final:</strong> ₹<%= order.finalAmount %></p>
    </div>

    <div class="tracking-details">
      <h4>Tracking</h4>
      <p><strong>ID:</strong> <%= order.tracking.trackingId %><br>
      <strong>Carrier:</strong> <%= order.tracking.carrier %><br>
      <strong>ETA:</strong> <%= order.tracking.estimatedDelivery.toDateString() %></p>
    </div>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
